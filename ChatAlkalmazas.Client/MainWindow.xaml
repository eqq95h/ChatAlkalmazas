<Window x:Class="ChatAlkalmazas.Client.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ChatAlkalmazas.Client"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="27*"/>
                <RowDefinition Height="190*"/>
            </Grid.RowDefinitions>
            <Label Content="Login:" HorizontalAlignment="Left" Margin="10,0,0,0" VerticalAlignment="Center" FontSize="14"/>
            <TextBox x:Name="UserNameInputField" HorizontalAlignment="Left" Margin="62,0,0,0" TextWrapping="Wrap" Text="Username" VerticalAlignment="Center" Width="120" Background="White" BorderBrush="#FF9E9E9E"/>
            <Button Content="Submit" HorizontalAlignment="Left" Margin="201,0,0,0" VerticalAlignment="Center" Height="18" Width="71" Click="Button_Click"/>
        </Grid>

    </Grid>
</Window>
